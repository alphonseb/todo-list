.todo-list
    background rgba(255,0,0,0.5)
    padding 2rem 3rem

    h2
        text-align center

    form
        display flex
        justify-content center
        padding 2rem
        input[type='text']
            background transparent
            border none
            border-bottom solid 1px rgba(255,255,255,0.6)
            caret-color rgba(255,255,255,0.6)
            color #fff
            box-shadow none
            outline none
            padding 1rem
            padding-bottom 0
            &:focus
                border-color #fff
            &::placeholder
                color rgba(255,255,255,0.6)

    .loader
        margin-top 2rem